<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudGet.Pages.SettingPage"
             x:Name="root"
             Title="Setting"
             
             xmlns:components="clr-namespace:BudGet.Components">
    <ContentPage.Content>
        <ListView   VerticalOptions="FillAndExpand"
                    HasUnevenRows="True"
                    ItemSelected="OnItemSelected"
                    ItemsSource="{Binding Source={x:Reference root}, Path=Collection}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <components:SettingMenuItem Image="{Binding Icon}" Title = "{Binding Title}" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>